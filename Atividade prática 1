Script JS
// ---------- VOLUNTÁRIOS ----------
const formVoluntario = document.getElementById('formVoluntario');
const listaVoluntarios = document.getElementById('listaVoluntarios');
let voluntarios = JSON.parse(localStorage.getItem('voluntarios')) || [];

function atualizarLista() {
  listaVoluntarios.innerHTML = voluntarios.map(v => `<li>${v.nome} - ${v.email}</li>`).join('');
  localStorage.setItem('voluntarios', JSON.stringify(voluntarios));
}
formVoluntario.addEventListener('submit', e => {
  e.preventDefault();
  const nome = document.getElementById('nome').value;
  const email = document.getElementById('email').value;
  voluntarios.push({ nome, email });
  atualizarLista();
  formVoluntario.reset();
});
atualizarLista();

// ---------- DOAÇÕES ----------
const formDoacao = document.getElementById('formDoacao');
const totalSpan = document.getElementById('totalDoado');
const barra = document.getElementById('barraProgresso');
let total = parseFloat(localStorage.getItem('totalDoado')) || 0;

function atualizarDoacoes() {
  totalSpan.textContent = total.toFixed(2);
  barra.value = total;
  localStorage.setItem('totalDoado', total);
}
formDoacao.addEventListener('submit', e => {
  e.preventDefault();
  const valor = parseFloat(document.getElementById('valor').value);
  total += valor;
  atualizarDoacoes();
  formDoacao.reset();
});
atualizarDoacoes();

// ---------- ADMIN ----------
document.getElementById('btnLogin').addEventListener('click', () => {
  const senha = document.getElementById('senhaAdmin').value;
  if (senha === 'demo123') {
    document.getElementById('painel').style.display = 'block';
    const dados = { voluntarios, totalDoado: total };
    document.getElementById('dadosJSON').textContent = JSON.stringify(dados, null, 2);
  } else {
    alert('Senha incorreta!');
  }
});

// ---------- EXPORTAR CSV ----------
document.getElementById('exportarCSV').addEventListener('click', () => {
  const csv = voluntarios.map(v => `${v.nome},${v.email}`).join('\n');
  const blob = new Blob([csv], { type: 'text/csv' });
  const link = document.createElement('a');
  link.href = URL.createObjectURL(blob);
  link.download = 'voluntarios.csv';
  link.click();
});

